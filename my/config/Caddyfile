# tls /path/to/your/certificate.crt /path/to/your/certificate.key

# 代理 3002 端口的 Xray
reverse_proxy localhost:3002 {
    header Host vless
    path /${VLESS_WSPATH}
}

# 代理 3003 端口的 Xray
reverse_proxy localhost:3003 {
    header Host vmess
    path /${VMESS_WSPATH}
}

# 代理其他服务
reverse_proxy localhost:${V_PORT}

# 伪装静态主页
handle_path / {
    reverse_proxy localhost:${PORT}
    file_server /app {
        root /index.html
    }
}
